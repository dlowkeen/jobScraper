<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="homepage-hero-module">
    <div class="video-container">
        <div class="title-container">
            <div class="headline">
                <h1>Job Scraper</h1>

            </div>
            <div class="description">
                <div class="inner">Find a remote development job that fits your lifestyle</div>
            </div>
        </div>
        <div class="filter"></div>
        <video autoplay loop class="fillWidth">
            <source src="/images/typing.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.</video>
        <div class="poster hidden">
            <img src="http://www.videojs.com/img/poster.jpg" alt="">
        </div>
    </div>
</div>

    
<div class="container"><br>
{{!-- Jobs section --}}
    <div class="card">
        <div class="card-header">
            {{!-- New Jobs! --}}
        </div>
        <div class="card-body">
            {{#each jobs}}
                <ul class="list-group">
                    <li class="list-group-item">
                        <h3>{{company}}</h3>
                        <p><a href="{{link}}">{{title}}</a></p>
                    </li>
                </ul>
            {{/each}}
        </div>
    </div>

</div>

    <!-- Jumbotron -->
    <div class="jumbotron">
        <h1>Remote Jobs Board</h1>
        <p>A collection of remote development positions</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/all" role="button">View Jobs</a>
        </p>
    </div>

    <div class="card">
        <div class="card-header">
            New Jobs!
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>Company</th>

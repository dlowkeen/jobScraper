<div class="container">
{{!-- Jobs section --}}
    <div class="card">
        <div class="card-header">
            New Jobs!
        </div>
        <div class="card-body">

            <table class="table">
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>Title</th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody id="table-row">
                     {{#each jobs}}
                     <tr>
                        <td>{{company}}</td>
                        <td>{{title}}</td>
                        <td><a href="{{link}}">Click To View Description</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>

    <div id="results"></div>
</div>
